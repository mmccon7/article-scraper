<div class="container-fluid">
    <div class="row content">
        <div class="col-sm-2 sidenav">
            <h4>Article Navigation</h4>
            <hr>
            <ul class="nav nav-pills nav-stacked">
                <p id="readArticle" class="hidden">
                    <a href="" id="article" target="_blank">
                        <button class="btn btn-primary">Read Article</button>
                    </a>
                </p>
                <p>
                    <button id="getArticles" class="btn btn-primary">Read Articles</button>
                </p>
                <div id="navigation">
                </div>
            </ul>
            <br>
            <h4>Comments</h4>
            <hr>
            <div id="articleComments">
            </div>
        </div>
        <div class="row">
            <div class="col-md-2"></div>
            <div id="content" class="col-sm-12 col-md-9">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-sm-12 col-md-9">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h2 id="title" class="text-center">News for Everyone!</h2></div>
                            <div class="panel-body">
                                <img id="image" src="#" alt="title" class="img-thumbnail center-block hidden">
